<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    android:padding="@dimen/inner_margin"
    android:columnCount="3">

    <!-- 1. Przycisk: 6 x 6 -->
    <Button
        android:id="@+id/main_6_6_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="6 x 6"
        android:textSize="34sp"
        android:gravity="center"
        android:tag="6 6"
        android:onClick="onBoardSizeClick"
        app:icon="@drawable/baseline_audiotrack_24"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="48dp" />

    <!-- 2. Przycisk: 4 x 4 -->
    <Button
        android:id="@+id/main_4_4_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="4 x 4"
        android:textSize="34sp"
        android:gravity="center"
        android:tag="4 4"
        android:onClick="onBoardSizeClick"
        app:icon="@drawable/baseline_audiotrack_24"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="48dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/inner_margin" />

    <!-- 4. Przycisk: 4 x 3 -->
    <Button
        android:id="@+id/main_4_3_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="4 x 3"
        android:textSize="34sp"
        android:gravity="center"
        android:tag="4 3"
        android:onClick="onBoardSizeClick"
        app:icon="@drawable/baseline_audiotrack_24"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="48dp" />

    <Button
        android:id="@+id/main_3_2_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="3 x 2"
        android:textSize="34sp"
        android:gravity="center"
        android:tag="3 2"
        android:onClick="onBoardSizeClick"
        app:icon="@drawable/baseline_audiotrack_24"
        app:iconGravity="textTop"
        app:iconPadding="@dimen/icon_padding"
        app:iconSize="48dp" />

    <!-- 6. Niewidoczna kolumna (Space) w drugim wierszu -->
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/inner_margin" />

</GridLayout>